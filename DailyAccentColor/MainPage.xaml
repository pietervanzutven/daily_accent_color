<Page
    x:Class="DailyAccentColor.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DailyAccentColor"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Grid x:Name="colorView" Margin="0,0,0,0" VerticalAlignment="Stretch">
        <Button x:Name="refresh" Content="Refresh" HorizontalAlignment="Stretch" Margin="0,0,0,0" VerticalAlignment="Bottom" Click="Refresh_Click"/>
    </Grid>


</Page>
